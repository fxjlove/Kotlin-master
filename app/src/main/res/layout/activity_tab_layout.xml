<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#fff"
>
    <!--导航栏-->
    <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/sliding_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@color/contacts_tl_bg_color"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            tl:tl_indicator_color="@color/color_all_link_clickable_blue"
            tl:tl_indicator_height="2.5dp"
            tl:tl_indicator_width="30dp"
            tl:tl_indicator_width_equal_title="false"
            tl:tl_tab_padding="10dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="@color/contacts_tl_text_select_color"
            tl:tl_textUnselectColor="@color/contacts_tl_text_unselect_color"
            tl:tl_indicator_corner_radius="1.3dp"
            tl:tl_textsize="15sp"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="4.8dp"
            android:background="#F4F4F4"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
