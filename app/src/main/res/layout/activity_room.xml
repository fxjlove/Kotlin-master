<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="student" />

            <Button
                    android:id="@+id/insert"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Insert(插入)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/update"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Update(更新)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Delete(删除)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/query"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Query(查询)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="新增age字段"
                    android:textAllCaps="false" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="teacher" />

            <Button
                    android:id="@+id/insertT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Insert(插入)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/sortT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="sort(排序)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/modificationT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="对 ID=1 的老师做修改，把他的教学年限，改成11(insert 报错)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/updateT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="对 ID=1 的老师做修改，把他的教学年限，改成11(update)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/queryT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Query(查询)"
                    android:textAllCaps="false" />

            <Button
                    android:id="@+id/deleteT"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Delete(删除)"
                    android:textAllCaps="false" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:text="book" />

            <Button
                    android:id="@+id/insertB"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Insert(插入)"
                    android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
